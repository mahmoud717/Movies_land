<%= render  "shared/notice" %>
<div class=" container-fluid category-container-2 m-0 p-0 w-100 row bg-white  ">

    <% @articles.with_attached_image.each do |article| %>
    <% @count += 1 %>
    <% if  @count <= 2  %>
    <div class="col-12 col-lg-6 category-article-container m-0 p-0 row">
        <div class="category-article-image w-100 col-6 m-0 p-0">
            <%= link_to(image_tag(article.image), article_path(article))   %>
        </div>
        <div class="category-article-details col-6 bg-white p-0">
            <%= image_tag  "bg.jpg" , class: "w-100" %>
            <div class="details p-3">
                <div class="category-name">
                    <%= @category.name.capitalize %>
                </div>
                <div class="title">
                    <%= article.title.capitalize %>
                </div>
                <div class="body">
                    <%= article.body.truncate(120).capitalize %>
                </div>
                <div class="read-more pt-3">
                    <%= link_to  "Read more", article_path(article) %>
                </div>
            </div>
        </div>
    </div>
    <% else %>
    <div class="col-12 col-lg-6 category-article-container m-0 p-0 row">
        <div class="category-article-image w-100 col-6 m-0 p-0 order-2">
            <%= link_to(image_tag(article.image, class: ""), article_path(article))   %>
        </div>
        <div class="category-article-details col-6 bg-white order-1 p-0 ">
            <%= image_tag  "bg.jpg" , class: "w-100" %>
            <div class="details p-3">
                <div class="category-name">
                    <%= @category.name.capitalize %>
                </div>
                <div class="title">
                    <%= article.title.capitalize %>
                </div>
                <div class="body">
                    <%= article.body.truncate(120).capitalize %>
                </div>
                <div class="read-more pt-3">
                    <%= link_to  "Read more", article_path(article) %>
                </div>
            </div>
        </div>
    </div>
    <% end %>
    <%end%>
</div>