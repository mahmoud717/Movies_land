<%= form_with(model: article, local: true) do |f| %>
<div class="container form-container  w-50 bg-white p-5 ">
    <%= render  "shared/notice"%>
    <div class="form-group">
        <%= f.label :title  %>
        <%= f.text_field :title,class: "form-control",:aria=>{:describedby=> "titleHelp"}, :placeholder=> "please enter the article title" %>
        <small id="titleHelp" class="form-text text-muted"> title must be unique and between (5-15) characters. </small>
    </div>
    <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, class: "form-control", :placeholder=> "Enter article description." %>
    </div>
    <div class="text-center">
        <%= f.submit "Create" , class: "btn btn-lg btn-info"  %>
    </div>
    <% end %>
</div>