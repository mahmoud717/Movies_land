<%= form_with(model: article, local: true) do |f| %>
<div class="container-fluid  w-10 bg-white p-5 ">
    <%= render  "shared/notice"%>
    <div class="container article-form d-flex flex-column">
        <div class="article-form-image w-100 d-flex justify-content-center align-items-center">
            <%= f.file_field(:image, accept: 'image/png,image/gif,image/jpeg') %>
        </div>
        <div class="article-form-title w-100">
            <%= f.text_field :title, :placeholder=> "Title" %>
        </div>
        <span class="input article-form-body" role="textbox" contenteditable="true" aria-multiline="true" placeholder=" Start Writing..." name="article[body]" id="article_body" spellcheck="true">99</span>
        <%
=begin%>
        <%= f.text_area :body, size: "auto",class: "article-form-body", :placeholder=> "Start Writing..." %>
        <%
=end%>

        <%= f.select(:category_id, options_from_collection_for_select(@categories, :id, :name), { include_blank: "Select category" }, { class: 'select-option' } ) %>
        <div class="text-center">
            <%= f.submit "Create" , class: "btn btn-lg btn-info"  %>
        </div>
    </div>
    <% end %>
</div>