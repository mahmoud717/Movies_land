<%= form_with(model: article, local: true) do |f| %>
<div class="container-fluid  w-10 bg-white p-5 ">
    <%= render  "shared/notice"%>
    <div class="container article-form d-flex flex-column">
        <div class="article-form-top w-100 d-flex flex-column justify-content-center align-items-center ">
            <div class="article-form-top-container ">
                <div class="image">
                    <%= f.file_field(:image, accept: 'image/png,image/gif,image/jpeg', class: "btn mb-3 pl-0") %>
                </div>
                <div class="category">
                    <%= f.select(:category_id, options_from_collection_for_select(@categories, :id, :name), { include_blank: "Select category" }, { class: 'select-option' } ) %>
                </div>
            </div>
        </div>
        <div class="article-form-title w-100">
            <%= f.text_field :title, :placeholder=> "Title" %>
        </div>

        <div class="w-100">
            <%= f.text_area :body,class: "article-form-body", :placeholder=> "Start Writing..." %>
        </div>


        <div class="text-center">
            <%= f.submit "Create" , class: "btn btn-lg btn-info"  %>
        </div>
    </div>
    <% end %>
</div>